{
  "name": "pivot-kit",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:e2e": "TEST_ENV=local playwright test",
    "test:e2e:ui": "TEST_ENV=local playwright test --ui",
    "test:e2e:debug": "TEST_ENV=local playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:preview": "TEST_ENV=preview playwright test",
    "test:e2e:preview:ui": "TEST_ENV=preview playwright test --ui",
    "test:e2e:preview:headed": "TEST_ENV=preview playwright test --headed",
    "test:e2e:production": "TEST_ENV=production playwright test --grep @smoke",
    "test:e2e:production:full": "TEST_ENV=production playwright test",
    "test:e2e:production:headed": "TEST_ENV=production playwright test --headed --grep @smoke",
    "test:e2e:all": "npm run test:e2e && npm run test:e2e:preview && npm run test:e2e:production"
  },
  "dependencies": {
    "@sentry/react": "^10.25.0",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/supabase-js": "^2.78.0",
    "dotenv": "^17.2.3",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.554.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.5"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.57.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/html2canvas": "^0.5.35",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-basic-ssl": "^2.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "jsdom": "^27.0.1",
    "postcss": "^8.4.32",
    "supabase": "^2.54.11",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^7.1.12",
    "vitest": "^3.2.4"
  }
}
